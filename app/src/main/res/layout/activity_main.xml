<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1E22">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="226dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:foregroundGravity="bottom"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="60dp"
            android:paddingRight="40dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="343dp"
                android:layout_height="41dp"
                android:gravity="right"
                android:textColor="#737373"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="2sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="343dp"
                android:layout_height="65dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                app:autoSizeMaxTextSize="60sp"
                app:autoSizeMinTextSize="3sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>
    </ScrollView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="386dp"
        android:layout_height="407dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttongray"
                android:text="C"
                android:textAllCaps="false"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttongray"
                android:foreground="@drawable/ic_backspace_icon"
                android:textAllCaps="false"
                android:textSize="40sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:text="%"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:text="/"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="40sp" />

            />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="7"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="8"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="9"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:foreground="@drawable/ic_times_icon"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="40sp" />

            />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="4"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="5"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="6"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:shadowColor="#FFFFFF"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="40sp" />

            />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="1"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="3"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybutton"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="40sp" />

            />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:foreground="@drawable/ic_show_more_icon"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttontransparent"
                android:text="."
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/mybuttongray"
                android:text="="
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="40sp" />

            />

        </TableRow>


    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>